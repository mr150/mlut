{
	"compilerOptions": {
		"target": "es2022",
		"module": "nodenext",
		"rootDir": "./",
		"moduleResolution": "node16",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"!node_modules/@types"
	]
}
